<!--pages/peoson/person.wxml-->

<view class="container">
<!-- 个人信息 -->
    <view class="userinfo">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" />
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <!-- 杂项 -->
    <view class="foodState">
        <view class="states">
            <image src="../../assets/icons/waitpay.png" />
            <text>待付款</text>
        </view>
        <view class="states">
              <image src="../../assets/icons/waitpublish.png" />
            <text>待配送</text>
        </view>
        <view class="states">
              <image src="../../assets/icons/gotoyourhome.png" />
            <text>配送中</text>
        </view>
        <view class="states">
              <image src="../../assets/icons/waitcompent.png" />
            <text>待评价</text>
        </view>
        <view class="states">
             <image src="../../assets/icons/allorder.png" />
            <text>全部订单</text>
        </view>
    </view>
<button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">获取用户信息</button>
<button open-type="openSetting">打开授权设置页</button>

</view>