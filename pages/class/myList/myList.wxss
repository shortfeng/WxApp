/* pages/class/myList/myList.wxss */
swiper{
  height: 500rpx;
}
.myswiper{
    width: 100%;
    height: 500rpx; 
    background-size: cover;
}
.slide-image{
    width: 100%;
    height: 500rpx; 
    margin:  0 auto;
}
.myListImg{
  height: 130rpx;
  width: 100%;
}
.myListImg>image{
  height: 130rpx;
  width: 100%;  
}
.myListList{
  margin-left: 40rpx;
}
.myListList>text:nth-child(1){
  font-size: 23px;
  display: block;
}
.myListList>text:nth-child(2){
  font-size:13px;
  color: rgba(119, 117, 117, 0.753);
  display: block;
}
.myListList>text:nth-child(3){
  font-size:28px;
  color: red;
}
.myListSale{
  border-top:6px solid rgba(114, 114, 114, 0.2);
  border-bottom:6px solid rgba(114, 114, 114, 0.2)
}
.myListSale>text:nth-child(1){
  border: 1px solid red;
  border-radius: 2px;
  font-size:12px;
  color: red;
  margin-left: 40rpx;
  line-height: 50rpx;
}
.myListSale>text:nth-child(2){

  font-size:12px;
  color: rgb(0, 0, 0);
  margin-left: 40rpx;
  line-height: 50rpx;
}
.cart{
    height: 5rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
	position: fixed;
	left: 0;
	right: 0; 
	bottom: 0;
	padding: 50rpx;
    background: #11bcff;
}
.cart text{
    padding: 0 250rpx;
    
}
.cartButton{
    color:white;
    border-radius: 3px;
}
.myListPic image{
  width: 100%;
}
.myListtext{
  text-align: center;
}
.myListtext>text:first-child{
  font-size: 14px;
  padding: 10rpx 5rpx;
  display: block;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.281)
}
.myListtext>view>text{
  
  display: block;
  font-size: 12px;
  margin: 10rpx 25rpx;
}
.myListtext>view:nth-child(2)>text{
  text-align: left;
}
.myListtext>view:nth-child(2){
  float: left;
}